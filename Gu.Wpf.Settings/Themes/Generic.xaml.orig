<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Gu.Wpf.Settings"
                    xmlns:numeric="http://gu.se/NumericInput"
                    xmlns:settings="clr-namespace:Gu.Settings;assembly=Gu.Settings"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">


    <local:SettingTemplateSelector x:Key="SettingTemplateSelector">
        <DataTemplate DataType="{x:Static local:Types.MinMaxDouble}">
            <numeric:DoubleBox MaxValue="{Binding Max}"
                               MinValue="{Binding Min}"
                               Value="{Binding Setting.EditValue}" />
        </DataTemplate>

        <DataTemplate DataType="{x:Static local:Types.MinMaxInt}">
            <numeric:IntBox MaxValue="{Binding Max}"
                            MinValue="{Binding Min}"
                            Value="{Binding Setting.EditValue}" />
        </DataTemplate>

        <DataTemplate DataType="{x:Static local:Types.SettingBool}">
            <CheckBox IsChecked="{Binding Setting.EditValue}" />
        </DataTemplate>

        <DataTemplate DataType="{x:Static local:Types.SettingInt}">
            <numeric:IntBox Value="{Binding Setting.EditValue}" />
        </DataTemplate>

        <DataTemplate DataType="{x:Static local:Types.SettingDouble}">
            <numeric:DoubleBox Value="{Binding Setting.EditValue}" />
        </DataTemplate>
    </local:SettingTemplateSelector>

